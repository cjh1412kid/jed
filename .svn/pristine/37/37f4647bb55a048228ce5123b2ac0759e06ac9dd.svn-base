body {
	background-color: rgba(0,0,0,0.3);
}

.aui-list .aui-list-item {
    list-style: none;
    margin: 0;
    padding: 0;
    padding-left: 0.75rem;
    color: #212121;
    border-bottom: 0px solid #dddddd;
    position: relative;
    min-height: 1.0rem;
    -webkit-box-sizing: border-box;
    		box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    		justify-content: space-between;
}
.aui-list .aui-list-item-inner {
    position: relative;
    min-height: 1.0rem;
	padding-right: 0.75rem;
    width: 100%;
    -webkit-box-sizing: border-box;
    		box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
			justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
			align-items: center;
}
.aui-list-item-title{
	font-size: 0.7rem!important;
	color: #212121!important;
}

/* 窗口部分 */
.content {
	height: 76%;
	background-color: #FFFFFF;
}
/* header头部 */
.popTitle {
	height: 2.0rem;
}
.titleBtn {	
	font-size: 12px;
	color: #999999;
}
.titleBtn img {
	width: 1.2rem;
	height: 1.2rem;
}
/* 颜色,尺码 */
.aui-collapse-header.aui-active {
    background: #FFFFFF!important;
}
.aui-collapse-content .aui-col-xs-3{
	height:1.3rem;
	line-height: 1.3rem;
	margin-bottom:0.3rem;
	text-align: center;
}
/* "颜色"字体大小 */
.goods-color .aui-col-xs-3{
	font-size: 0.6rem;
}
/* "尺码"字体大小 */
.goods-size .aui-col-xs-3{
	font-size: 0.7rem;
}
.aui-collapse-content .aui-col-xs-3 div{
	height:100%;
	line-height: 100%;
	width:80%;
	margin:0 auto;
	display: flex;
	justify-content: center;
	align-items:center;
	background-color: #ECECEC;
	border-radius: 0.3rem;	
}
.aui-collapse-content .aui-col-xs-3 div.active{
	color: red;
	background: rgba(248,171,166, 0.2);
	border: 1px solid red;
	border-radius: 0.3rem;
}
/* 数量选择 */
.aui-bar-count{
	float: right;
}
.aui-bar-btn {
	width: 6.0rem !important;
	margin: 0 !important;
	margin-left: 3.0% !important;
}
.aui-bg-gray {
	background-color: #ECECEC !important;
}
.aui-bar-btn .aui-bar-btn-item {
	font-size: 1.0rem !important;
}
.aui-bar-btn .aui-bar-btn-item.aui-active {
	background-color: #FFFFFF;
}
.aui-bar-btn .aui-input, .aui-bar-btn input, .aui-bar-btn select {
	padding-left: 0.25rem;
	padding-right: 0.25rem;
	height: 1.5rem;
	line-height: 1.45rem;
}
/* 购买清单(滚动) */
.buy-list{
	overflow-y: auto;
	-webkit-overflow-scrolling: touch;
}
.selected-list .aui-list-item {
	padding-left: 0.0rem !important;
}

.selected-list li:active {
	background-color: #FFFFFF !important;
}
.selected-list .aui-list-item .aui-list-item-inner{
	padding-top: 0.3rem !important;
	padding-bottom: 0.3rem !important;
	padding-right:0.0rem !important;
}
/* 金额样式 */
.money-style-1{
	font-weight:450 !important; 
	font-size: 0.95rem !important; 
}
.money-style-2{
	font-weight:550 !important;  
	font-size: 0.7rem !important; 
}

/* tips提示 */
.tips{
	font-size: 0.6rem;
	position: fixed;
	bottom: 2.7rem;
	right: 0.5rem
}
.tips img{
	display: inline;
	width: 1.0rem;
	height: 0.9rem;
}
.aui-text-green{
	color: #00a83e !important;
}
.aui-text-yellow{
	color: #ffbb00 !important;
}
.aui-text-red{
	color: #ff5353 !important;
}
.aui-text-bold{
	font-weight: bold !important;
}

/* 确认/下单按钮 */
.aui-bar-tab {
	position: static !important;
}
.btn-sure{
	background-color: #f08a58;
	color: #FFFFFF;
}
.btn-sure:active{
	opacity: 0.9;
}
