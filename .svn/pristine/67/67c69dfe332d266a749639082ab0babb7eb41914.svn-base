html, body {
    height: 100%;
}

.aui-iconfont {
    font-weight: bold!important;
}

.check_flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.check_flex1 {
    display: flex;
    justify-content: center;
    align-items: center;
}

.checkWrap {
    padding: 0 .65rem;
    width: 100%;
    flex: 1;
    background: rgba(243, 243, 243, 1);
}

.wrapTittle {
    width: -webkit-calc(100% - 1.0rem);
    margin-left: 0.5rem;
    height: 2rem;
    font-size: 0.6rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(155, 155, 155, 1);
}

.shopNum {
    width: 40%!important;
}

.wrapTittle span {
    width: 20%;
    height: 2rem;
    line-height: 2rem;
}

.tittle_hot {
    color: rgba(255, 81, 0, 1);
}

.content {
    overflow-y: scroll;
    background: rgba(255, 255, 255, 1);
    border-radius: 0.5rem;
}

.checkContent {
    width: 100%;
}

.checkContent li {
    width: 100%;
    height: 2rem;
}

.flex-wrap.aui-border-b div {
    width: 20%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.checkNum {
    width: 40%!important;
    font-size: 0.7rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(80, 80, 80, 1);
    justify-content: center;
    padding-left: 0.5rem;
}

.checkTime {
    font-size: 0.8rem;
    font-family: Arial-Black;
    font-weight: 900;
    color: #FF7B47;
    /*transform: translateX(-1.5rem);*/
}

.checkContent .checkOrder {
    color: #FF7B47;
    /*transform: translateX(-.8rem);*/
}

.shop-user .checkOrder {
    display: none!important;
}

.isCheck span {
    width: 100%;
    height: 100%;
    font-size: .7rem;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #08BC99!important;
    font-weight: bold!important;
    /*transform: translateX(-.2rem);*/
}

.btn-check {
    width: 9.8rem;
    height: 1.77rem;
    background: linear-gradient(180deg, rgba(255, 178, 125, 1) 0%, rgba(255, 123, 71, 1) 100%);
    border-radius: 0.88rem;
    font-size: 0.8rem;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    line-height: 1.77rem;
}

.bottom {
    height: 3.8rem;
}
.shop-user .bottom{
  display: none;
}
