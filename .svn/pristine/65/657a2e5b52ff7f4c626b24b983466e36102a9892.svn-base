.box {
    width: -webkit-calc(100% - 1.0rem);
    margin: .5rem .5rem 0 .5rem;
    border: .03rem solid rgba(210, 210, 210, 1);
    background: #fff;
}
.title-top{
  position: sticky;
  top: 0;
}
.title {
    height: 2rem;
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: .03rem solid rgba(210, 210, 210, 1);
    background: #fff;
}

.title>div {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    font-size: 0.6rem;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #505050;
}

.hot{
  transform: rotate(180deg);
}

.width1 {
    width: 10%;
}

.width2 {
    width: 20%;
}

.width3 {
    width: 15%;
}

.item {
    height: 2rem;
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: .03rem solid rgba(210, 210, 210, 1);
}
.content>div:last-child{
  border-bottom: none;
}
.item>div {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    font-size: 0.6rem;
    font-family: Arial-Black;
    font-weight: 900;
    color: rgba(151, 151, 151, 1);
}
.sort-btn.active{
	color: rgba(255,81,0,1);
}
.shop{
   justify-content: center;
}
