/*商品图片容器 */
.contain {
    width:  -webkit-calc(50vw -0.3rem);/*屏幕宽度的一半*/
    height: -webkit-calc(50vw -0.3rem);/*屏幕宽度的一半*/
}
.item {
    /*float: left;*/
    position: relative;
    /*这里显示的就是1:1,以后div就会保持这个比例*/
    width: 100%;
    padding-bottom: 100%;  
}
.item .box{
	width: 100%;
	height: 100%;
    display: flex;
    justify-content:center;
    text-align: center;
	position: absolute;	
			
}
.item .box img{
	border-top-left-radius: 0.3rem;
	border-top-right-radius: 0.3rem;
}

