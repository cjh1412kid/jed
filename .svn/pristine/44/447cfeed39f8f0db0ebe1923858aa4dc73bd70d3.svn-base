html, body {
    height: 100%;
}

#wrap {
    height: 100%;
}

.hover {
    opacity: .8;
}

.flex-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.flex-vertical {
    -webkit-box-orient: vertical;
    -webkit-flex-flow: column;
    flex-flow: column;
}

.flex-con {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}

.flex-1 {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}

.flex-2 {
    -webkit-box-flex: 2;
    -webkit-flex: 2;
    flex: 2;
}

.flex-3 {
    -webkit-box-flex: 3;
    -webkit-flex: 3;
    flex: 3;
}

.flex-4 {
    -webkit-box-flex: 4;
    -webkit-flex: 4;
    flex: 4;
}

.flex-5 {
    -webkit-box-flex: 5;
    -webkit-flex: 5;
    flex: 5;
}

.flex-6 {
    -webkit-box-flex: 6;
    -webkit-flex: 6;
    flex: 6;
}

.flex-7 {
    -webkit-box-flex: 7;
    -webkit-flex: 7;
    flex: 7;
}

.flex-8 {
    -webkit-box-flex: 8;
    -webkit-flex: 8;
    flex: 8;
}

.box-wrap {
    display: -webkit-box;
    display: box;
}

.box-vertical {
    -webkit-box-orient: vertical;
}

.box-horizontal-start {
    -webkit-box-align: start;
    box-align: start;
}

.box-vertical-start {
    -webkit-box-pack: start;
    box-pack: start;
}

.box-horizontal-center {
    -webkit-box-align: center;
    box-align: center;
}

.box-vertical-center {
    -webkit-box-pack: center;
    box-pack: center;
}

.box-horizontal-end {
    -webkit-box-align: end;
    box-align: end;
}

.box-vertical-end {
    -webkit-box-pack: end;
    box-pack: end;
}
