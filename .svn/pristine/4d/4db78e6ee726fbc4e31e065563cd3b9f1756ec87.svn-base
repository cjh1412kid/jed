.suggest-area{
	position:fixed;
	width:100%;
	bottom: 0; 
}
 .aui-list .aui-list-item-media {
   width:2.0rem;
}
.aui-list .aui-list-item-title {
    font-size: 0.7rem;
    position: relative;
    max-width: 100%;
    color: #212121;
}
.aui-list .aui-list-item:active {
	background-color: #FFFFFF;
}
.aui-card-list-footer{
	min-height: 1.6rem;
	color: #bc9761;
 	padding: 0!important;
}
.aui-card-list-footer i{
	font-weight: bold;
	color: #bc9761;
}