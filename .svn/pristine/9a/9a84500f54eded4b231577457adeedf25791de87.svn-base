.aui-list .aui-list-item:active {
	background-color: #FFFFFF;
}
.aui-list .aui-list-item-media {
	width: 2.2rem!important;
	height:2.2rem!important;
	padding-right: 0.5rem!important;
//	background-color: #00897B;
}
.aui-list .aui-list-item-media img {
	border-radius: 50%;
	width: 1.7rem!important;
	height: 1.7rem!important;
//	background-color: #FF9059;
}
.aui-list .aui-list-item-title {
    font-size: 0.7rem;
    position: relative;
    max-width: 100%;
    color: #212121;
}
.community-type{
//	color: #212121;
}
.user-name{
	color:#4c5276!important;
}
.community-content{
	color:#212121!important;
}
.triangle {
	height: 0.4rem;
	line-height: 0.4rem;
	color: #f5f5f5
}
.comment-reply {
	font-size: 0.65rem;
	color: #212121;
}
.comment-reply-item{
	height: 1.1rem;
	height: auto;  
    word-wrap:break-word;  
    word-break:break-all;  
    overflow: hidden;  
}
.comment-reply-item:active{
	background-color: #dddddd;
}
.aui-card-list-footer{
	min-height: 1.6rem;
	color: #bc9761;
 	padding: 0!important;
}
.aui-card-list-footer i{
	font-weight: bold;
	color: #bc9761;
}
