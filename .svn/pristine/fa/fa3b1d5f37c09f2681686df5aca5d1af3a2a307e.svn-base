
.aui-chat .aui-chat-item:not(:last-child) {
	position: relative;
    width: 100%;
	margin-bottom: 0.0rem !important;
    overflow: hidden;
    display: block;
}
.aui-chat .aui-chat-item:last-of-type{
    margin-bottom: 1.0rem;
}
.aui-chat .aui-chat-content {
    font-size: 0.75rem !important;
    padding: 0.55rem 0.5rem 0.45rem !important;
}
.aui-chat .aui-chat-name {
    margin-bottom: 0.0rem !important;
}

/* 连天界面-左侧  */
.aui-chat .aui-chat-left .aui-chat-inner {
    max-width: 85%;
}
.aui-chat .aui-chat-left .aui-chat-media {
	margin-top: 0.9rem;
}
.aui-chat .aui-chat-left .aui-chat-content{
//  background-color: rgba(239, 168, 133, 1);
    background-color: rgba(255, 255, 255, 1) !important;
    float: left;
    left: 0.5rem;
	border-radius: 5px;
}
/* 连天界面-右侧  */
.aui-chat .aui-chat-right .aui-chat-inner {
    float: right;
    max-width: 85%;
}
.aui-chat .aui-chat-right .aui-chat-media {
	margin-top: 0.9rem;
}
.aui-chat .aui-chat-right .aui-chat-content {
    background-color: rgba(213, 181, 136, 1);
    float: right;
    right: 0.5rem;
	border-radius: 5px;
}
/* 聊天箭头 */
.aui-chat .aui-chat-arrow {
    content: '';
    position: absolute;
    width: 0.6rem;
    height: 0.6rem;
    top: 0.7rem;
    -webkit-transform-origin: 50% 50% 0;
            transform-origin: 50% 50% 0;
    background-color: transparent;
}
.aui-chat .aui-chat-left .aui-chat-arrow {
    background-image: -webkit-linear-gradient(45deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 1) 50%, transparent 50%);
    background-image: linear-gradient(45deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 1) 50%, transparent 50%);
    -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
    left: -0.2rem;
}
.aui-chat .aui-chat-right .aui-chat-arrow {
    background-image: -webkit-linear-gradient(45deg, rgba(213, 181, 136, 1), rgba(213, 181, 136, 1) 50%, transparent 50%);
    background-image: linear-gradient(45deg, rgba(213, 181, 136, 1), rgba(213, 181, 136, 1) 50%, transparent 50%);
    -webkit-transform: rotate(-135deg);
            transform: rotate(-135deg);
    right: -0.2rem;
}

/* 语音图标 */
.voice-icon-left{
	width: 0.8rem;
	height: 0.8rem;
	margin: 0.0rem 0.5rem 0.2rem 0.0rem; 
	display: inline !important; 
	vertical-align: middle;
}
.voice-icon-right{
	width: 0.8rem;
	height: 0.8rem;
	margin: 0.0rem 0.0rem 0.2rem 0.5rem; 
	display: inline !important; 
	vertical-align: middle;
}
/* 消息发送状态 */
.aui-chat .aui-chat-left .aui-chat-status {
    float: left;
    left: 0.3rem;
}
.aui-chat .aui-chat-right .aui-chat-status {
    float: right;
    right: 0.3rem;
}
.aui-chat-status i.aui-chat-progress {
	color: #666;
	display: inline-block;
	-webkit-animation: rotate 1s infinite linear;
			animation: rotate 1s infinite linear;
}
.goods-title {
	min-height: 1.9rem;
	margin-bottom: 0.1rem;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.attr-name{
	color: #999999;
}
.aui-list{
	border-radius: 5px;
}
.aui-list .aui-list-item{
	min-height: 1.8rem;
	border-bottom: none !important;
}
.aui-list-item-media img{
	border-radius: 5px;
	padding-bottom: 1px;
}
.aui-list .aui-list-item-inner {
	min-height: 1.8rem;
}
.aui-list .aui-list-item:active {
    background-color: #FFFFFF !important;
    opacity:0.8 !important;
}
.aui-list-item-media{
//	padding: 0.8rem!important;
	width: 5.0rem!important;
}