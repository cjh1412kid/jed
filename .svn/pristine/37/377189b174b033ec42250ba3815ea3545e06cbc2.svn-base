.shWrap {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    position: relative;
}
.sh_flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sh_flex1{
  display: flex;
  justify-content: center;;
  align-items: center;
}
.shContent {
    width: 100%;
    height: 13.6rem;
    background: rgba(255, 255, 255, 1);
    position: absolute;
    left: 0;
    bottom: 0;
}

.shops {
    height: 2.02rem;
    background: rgba(255, 255, 255, 1);
    border-top: 0.05rem solid rgba(210, 210, 210, 1);
    display: flex;
    align-items: center;
}

.shRectittle {
    margin-right: .2rem;
}

.shRectittle span {
    font-size: 0.6rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(147, 147, 147, 1);
}

.shInv {
    font-size: 0.7rem;
    font-family: Arial-Black;
    font-weight: 900;
    color: rgba(147, 147, 147, 1);
}

.shInv span {
    width: 1.75rem;
    text-align: center;
}

.shRec {
    width: 100%;
    height: 1.98rem;
    font-size: 0.7rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(80, 80, 80, 1);
}

.shSize {
    width: 100%;
    height: 1.62rem;
    background: rgba(255, 251, 243, 1);
    font-size: 0.7rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(147, 147, 147, 1);
    display: flex;
    align-items: center;
}

.shSizetittle {

    margin-right: .2rem;
}

.shSizetittle span {
    font-size: 0.5rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(80, 80, 80, 1);
}

.shSizetittle span:nth-child(2) {
    color: #939393;
}

.shSizes {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.shSizes span {
    width: 1.95rem;
    text-align: center;
}

.shContent li:last-child {
    height: 2rem;
    width: 100%;
    font-size: 0.8rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    background: rgba(249, 108, 37, 1);
    border-radius: 0.08rem 0.08rem 0rem 0.08rem;
}
