.aui-bar-light {
    color: #03a9f4;
    background-color: #ffffff;
    border-bottom: 0px solid #dddddd;
}

@media screen and (-webkit-min-device-pixel-ratio:1.5) {
    .aui-bar.aui-bar-light {
        border: none;
        background-size: 100% 0px;
        background-repeat: no-repeat;
        background-position: bottom;
        background-image: linear-gradient(0, #dddddd, #dddddd 50%, transparent 50%);
        background-image: -webkit-linear-gradient(90deg, #dddddd, #dddddd 50%, transparent 50%);
    }
}

.aui-iconfont {
    font-weight: bold !important;
}

.aui-pull-right img {
    //	background-color: #0062CC;
    width: 0.98rem;
    height: 0.87rem;
}

.aui-iconfont {
    background-position: center;
    background-repeat: no-repeat;
    background-size: 1.3rem 1.3rem;
    color: rgba(0, 0, 0, 0);
}

.aui-bar-nav .aui-pull-left {
    padding: 0 0.5rem;
    font-size: 0.8rem;
    font-weight: normal;
    z-index: 2;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
}

.aui-bar-nav .aui-pull-right {
    padding: 0 0.5rem;
    font-size: 0.8rem;
    font-weight: normal;
    z-index: 2;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
}

.cancel-btn, .complete-btn {
  font-size: 0.65rem!important;
}

.content {
    overflow-y: scroll;
}

.edit-blank {
    background-color: white;
}

.edit-btn {
    border-style: dashed;
    border-color: #ccc;
    border-width: 1px;
    padding-top: 0.35rem;
    padding-bottom: 0.5rem;
}

.edit-btn i {
    font-weight: bold!important;
}


/*宫格布局*/

.aui-grid {
    width: 100%;
    background-color: white;
    display: table;
    table-layout: fixed;
    padding: 0.0rem;
}

.aui-grid:last-of-type {
    padding-bottom: 0.5rem;
}

.group-name {
    margin: 0.5rem;
    height: 0.85rem;
    font-size: 0.7rem;
    font-family: PingFangSC-Medium;
    font-weight: bold;
    color: rgba(80, 80, 80, 1);
    line-height: 0.98rem;
}

.aui-grid [class*=aui-col-] {
    display: table-cell;
    position: relative;
    text-align: center;
    vertical-align: middle;
    padding: 0!important;
}

.aui-grid [class*=aui-col-]:active {
    background-color: #f5f5f5!important;
}

.aui-grid [class*=aui-col-xs-]:active {
    background-color: #f5f5f5;
}

.aui-grid img {
    position: relative;
    z-index: 20;
    top: 0.45rem;
    height: 2.0rem;
    width: 2.0rem;
    display: inline-block;
}

.aui-grid .aui-grid-label {
    display: block;
    position: relative;
    margin-top: 0.32rem;
    margin-bottom: 0.5rem;
    font-size: 0.6rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(80, 80, 80, 1);
}

.aui-grid .aui-badge {
    position: absolute;
    top: 0.15rem;
    left: 60%;
    z-index: 99;
    width: 0.72rem;
    height: 0.72rem;
    border-radius: 50%!important;
    background: rgba(255, 0, 0, 1);
    border: 0.07rem solid rgba(243, 243, 243, 1);
    font-size: 0.55rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
}

.close-lable, .add-lable {
    position: absolute;
    font-size: 0.4rem!important;
    font-weight: bold!important;
    z-index: 999;
    height: 0.7rem!important;
    line-height: 0.7rem!important;
    border-radius: 0.35rem;
    width: 0.7rem;
    top: 0;
    right: 0.5rem;
    color: white;
    display: inline-block;
    float: right;
}

.uneditable .close-lable, .uneditable .add-lable {
    display: none;
}

.close-lable {
    background-color: grey;
}

.add-lable {
    background-color: #03a9f4;
}
.title{
  width: 100% ;
  height: 4rem;
  background: #fff;
  padding: .5rem 2rem;
  color: #505050;
  font-size: .7rem;
  text-align: center;
}
