/* 订单详情页footer字体*/
.bottom-btns {
	color: #FFFFFF;
	font-size: 0.8rem !important;
	text-align: center;
}

.bottom-btns:active {
	background-color: #000000 !important;
	color: #FFFFFF;
	opacity:0.2 !important;
}

/**************  footer背景色  **************/
/* 1.红色(待确认) */
.aui-text-red{
	background-color: #ff877e !important;
}
/* 2.橙色 (待审核/支付)*/
.aui-text-orange{	
	background-color: #FFA500 !important;
}
/* 3.黑色(待入库) */
.aui-text-black{	
	background-color: #565656 !important;	
}
/* 4.蓝色(未/待发货)*/
.aui-text-blue{
	background-color: #66A8CC !important;
}
/* 5.紫色(部分发货) */
.aui-text-purple{
	background-color: #9370DB !important;
}
/* 6.棕色(已发货) */
.aui-text-brown{
	background-color: #cfa972 !important;
}
/* 7.绿色(已到/收货) */
.aui-text-green{
	background-color: #1dc075 !important;
}
/* 8.灰色 (已取消)*/
.aui-text-gray{	
	background-color: #abb0a1 !important;
}
/***************************************/
/* 退换&售后*/
.aui-text-disabled{
	color: #9D9D9D !important;
}


