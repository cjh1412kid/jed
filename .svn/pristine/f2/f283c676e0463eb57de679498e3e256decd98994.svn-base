.inv_flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.inv_flex1 {
    display: flex;
    justify-content: center;
    align-items: center;
}

.invWrap {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 1);
}

.invContent {
    width: 100%;
    padding: .5rem;
    height: 12.22rem;
    background: rgba(255, 255, 255, 1);
}

.invTittle {
    width: 100%;
    height: 1.83rem;
    font-size: 0.7rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 81, 0, 1);
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.invSize {
    width: 100%;
    height: 1.97rem;
    padding: 0 1rem;
    background: rgba(255, 250, 248, 1);
    font-size: 0.7rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(80, 80, 80, 1);
}

.repertory {
    width:100%;
    height: 2.13rem;
    padding:0 1rem;
    background: rgba(248, 252, 255, 1);
    font-size: 0.7rem;
    font-family: Arial-Black;
    font-weight: 900;
    color: rgba(151, 151, 151, 1);
}

.repertory div:first-child {
    color: rgba(80, 80, 80, 1);
    font-weight: 400;
    font-family: PingFangSC-Regular;
}
.invChartWrap{
  width: 100%;
  height: 16.9rem;
  padding: .9rem .5rem 0 .5rem;
}
#invChart{
  width: 17rem;
  height:14.17rem;
  margin: auto;
}
