._flex {
    display: flex;
    justify-content: center;
    align-items: center;
}
input{
  -webkit-user-select:text!important;
}
.content {
    padding: .5rem .5rem 0 .5rem;
}

.addlist {
    width: 100%;
    height: auto;
    background: #fff;
    border-radius: .5rem;
    margin-bottom: 2rem;
}

.addlist li {
    width: 100%;
    height: 2.2rem;
    padding: 0 .5rem;
    display: flex;
}

.addlist li span {
    width: 25%;
    font-size: 0.7rem;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(80, 80, 80, 1);
    line-height: 0.98rem;
}

.add-btn {
    width: 9.8rem;
    height: 1.77rem;
    background: linear-gradient(270deg, rgba(255, 167, 0, 1) 0%, rgba(255, 114, 0, 1) 100%);
    border-radius: 0.25rem;
    margin: 0 auto;
    font-size: 0.8rem;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}

.edit-btns {
    width: -webkit-calc(100% - 5.0rem);
    margin-left: 2.5rem;
    height: 1.8rem;
    font-size: 0.8rem;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    line-height:1.8rem;
}

.edit-btns div {
    height: 100%;
    border-radius: 0.25rem;
}

.del {
    background: red;
}

.update {
    background: linear-gradient(270deg, rgba(255, 167, 0, 1) 0%, rgba(255, 114, 0, 1) 100%);
}
