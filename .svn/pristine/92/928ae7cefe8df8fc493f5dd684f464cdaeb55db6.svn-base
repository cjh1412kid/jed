body,html{
	height: 100%;
}
body {
	background-color: rgba(0,0,0,0.5);
}
.btns {
	height: 2.5rem;
	border-top-left-radius: 0.25rem;
	border-top-right-radius: 0.25rem;
	background-color: #FFAA00;
}
.picker {
	height: 9.0rem;
}
.picker .top {
	background-image: linear-gradient(270deg, rgba(239,234,255,1), rgba(239,234,255,1));
}
.picker .center {
	background-image: linear-gradient(270deg, rgba(239,234,255,1), rgba(239,234,255,1));
}
.picker .bottom {
	background-image: linear-gradient(270deg, rgba(239,234,255,1), rgba(239,234,255,1));
}
